    <div class="toggle-sidebar" id="toggleSidebar">
        <i class="fas fa-bars"></i>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Variables
            const loginPage = document.getElementById('loginPage');
            const mainApp = document.getElementById('mainApp');
            const loginForm = document.getElementById('loginForm');
            const loginError = document.getElementById('loginError');
            const sidebar = document.getElementById('sidebar');
            const contentArea = document.getElementById('contentArea');
            const toggleSidebar = document.getElementById('toggleSidebar');
            const userDropdownToggle = document.getElementById('userDropdownToggle');
            const userDropdown = document.getElementById('userDropdown');
            const logoutButton = document.getElementById('logoutButton');

            // Check if user is logged in
            const isLoggedIn = sessionStorage.getItem('isLoggedIn') === 'true';
            if (isLoggedIn) {
                showApp();
                updateUserInfo(sessionStorage.getItem('username'), sessionStorage.getItem('role'));
            }

            // Login Form Submission
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;

                // Simple authentication (in a real app, this would be done server-side)
                if ((username === 'admin' && password === 'admin123') || 
                    (username === 'owner' && password === 'owner123')) {
                    // Login successful
                    sessionStorage.setItem('isLoggedIn', 'true');
                    sessionStorage.setItem('username', username);
                    sessionStorage.setItem('role', username === 'admin' ? 'admin' : 'owner');
                    showApp();
                    updateUserInfo(username, username === 'admin' ? 'admin' : 'owner');
                } else {
                    // Login failed
                    loginError.style.display = 'block';
                }
            });

            // Show main app
            function showApp() {
                loginPage.style.display = 'none';
                mainApp.style.display = 'flex';
                initializeCharts();
            }

            // Update user info
            function updateUserInfo(username, role) {
                const userAvatar = document.getElementById('userAvatar');
                const userName = document.getElementById('userName');
                const userRole = document.getElementById('userRole');

                userAvatar.textContent = username.charAt(0).toUpperCase();
                userName.textContent = username.charAt(0).toUpperCase() + username.slice(1);
                userRole.textContent = role === 'admin' ? 'Quản trị viên' : 'Chủ sân';
            }

            // Toggle sidebar on mobile
            toggleSidebar.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });

            // User dropdown
            userDropdownToggle.addEventListener('click', function(e) {
                e.stopPropagation();
                userDropdown.classList.toggle('active');
            });

            document.addEventListener('click', function() {
                userDropdown.classList.remove('active');
                document.getElementById('exportOptions')?.classList.remove('active');
                document.getElementById('exportRevenueOptions')?.classList.remove('active');
                document.getElementById('exportExpenseOptions')?.classList.remove('active');
                document.getElementById('exportUsageOptions')?.classList.remove('active');
                document.getElementById('exportStatusOptions')?.classList.remove('active');
            });

            // Logout
            logoutButton.addEventListener('click', function() {
                sessionStorage.removeItem('isLoggedIn');
                sessionStorage.removeItem('username');
                sessionStorage.removeItem('role');
                loginPage.style.display = 'flex';
                mainApp.style.display = 'none';
                document.getElementById('username').value = '';
                document.getElementById('password').value = '';
                loginError.style.display = 'none';
            });

            // Tab Navigation
            const contentTabs = [
                { id: 'dashboardContent', link: 'dashboardLink' },
                { id: 'revenueContent', link: 'revenueLink' },
                { id: 'expenseContent', link: 'expenseLink' },
                { id: 'fieldUsageContent', link: 'fieldUsageLink' },
                { id: 'fieldStatusContent', link: 'fieldStatusLink' }
            ];

            contentTabs.forEach(tab => {
                document.getElementById(tab.link).addEventListener('click', function() {
                    // Hide all content
                    contentTabs.forEach(t => {
                        document.getElementById(t.id).classList.remove('active');
                        document.getElementById(t.link).classList.remove('active');
                    });

                    // Show selected content
                    document.getElementById(tab.id).classList.add('active');
                    document.getElementById(tab.link).classList.add('active');
                });
            });

            // Export dropdown toggles
            const exportToggles = [
                { toggle: 'exportToggle', options: 'exportOptions' },
                { toggle: 'exportRevenueToggle', options: 'exportRevenueOptions' },
                { toggle: 'exportExpenseToggle', options: 'exportExpenseOptions' },
                { toggle: 'exportUsageToggle', options: 'exportUsageOptions' },
                { toggle: 'exportStatusToggle', options: 'exportStatusOptions' }
            ];

            exportToggles.forEach(item => {
                const toggleElem = document.getElementById(item.toggle);
                const optionsElem = document.getElementById(item.options);
                
                if (toggleElem && optionsElem) {
                    toggleElem.addEventListener('click', function(e) {
                        e.stopPropagation();
                        optionsElem.classList.toggle('active');
                    });
                }
            });

            // Time range select
            const timeRangeSelect = document.getElementById('timeRangeSelect');
            const dateRangeFields = document.querySelectorAll('.date-range');

            timeRangeSelect.addEventListener('change', function() {
                if (this.value === 'custom') {
                    dateRangeFields.forEach(field => field.style.display = 'block');
                } else {
                    dateRangeFields.forEach(field => field.style.display = 'none');
                }
            });

            // Revenue report tabs
            const revenueTabs = document.querySelectorAll('[data-revenue-tab]');
            revenueTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    revenueTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    // In a real app, you would show the corresponding content here
                    if (this.getAttribute('data-revenue-tab') !== 'overview') {
                        alert('Chức năng này sẽ được cập nhật trong phiên bản tiếp theo.');
                        document.querySelector('[data-revenue-tab="overview"]').classList.add('active');
                        this.classList.remove('active');
                    }
                });
            });

            // Initialize Charts
            function initializeCharts() {
                // Revenue Chart
                const revenueChart = new Chart(
                    document.getElementById('revenueChart'),
                    {
                        type: 'line',
                        data: {
                            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
                            datasets: [{
                                label: 'Doanh thu (triệu VND)',
                                data: [95, 105, 128.5, 0, 0, 0, 0, 0, 0, 0, 0, 0],
                                borderColor: '#1a5d1a',
                                backgroundColor: 'rgba(26, 93, 26, 0.1)',
                                tension: 0.3,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'top',
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    }
                );

                // Field Distribution Chart
                const fieldDistributionChart = new Chart(
                    document.getElementById('fieldDistributionChart'),
                    {
                        type: 'doughnut',
                        data: {
                            labels: ['Sân 5 người', 'Sân 7 người', 'Sân 11 người', 'Sân khác'],
                            datasets: [{
                                data: [40, 25, 20, 15],
                                backgroundColor: [
                                    '#43a047',
                                    '#1e88e5',
                                    '#f57f17',
                                    '#8e24aa'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'right',
                                }
                            }
                        }
                    }
                );

                // Additional charts for other tabs would be initialized here
                // These are simplified examples
