    <script>
        // Show/Hide Service Modal
        document.getElementById('btnAddService').addEventListener('click', function() {
            document.getElementById('serviceModal').classList.remove('hidden');
        });

        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('serviceModal').classList.add('hidden');
        });

        // Manage filter tab selection
        const filterButtons = document.querySelectorAll('[data-filter]');
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                filterButtons.forEach(btn => {
                    btn.classList.remove('text-primary', 'border-primary');
                    btn.classList.add('text-gray-500', 'border-transparent');
                });

                // Add active class to clicked button
                this.classList.add('text-primary', 'border-primary');
                this.classList.remove('text-gray-500', 'border-transparent');

                // Apply filter logic here
                const filterType = this.getAttribute('data-filter');
                console.log('Filter applied:', filterType);
                // In real implementation, you would filter the table data based on the filterType
            });
        });

        // Example delete button event handlers
        const deleteButtons = document.querySelectorAll('button .material-icons');
        deleteButtons.forEach(button => {
            if (button.textContent === 'delete') {
                button.parentElement.addEventListener('click', function() {
                    document.getElementById('deleteModal').classList.remove('hidden');
                });
            }
        });

        document.getElementById('closeDeleteModal').addEventListener('click', function() {
            document.getElementById('deleteModal').classList.add('hidden');
        });

        // Icon selection in the modal
        const iconButtons = document.querySelector('.grid.grid-cols-5').querySelectorAll('button');
        iconButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all icon buttons
                iconButtons.forEach(btn => {
                    btn.classList.remove('bg-blue-50', 'text-blue-600');
                });
                
                // Add active class to clicked button
                this.classList.add('bg-blue-50', 'text-blue-600');
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            console.log('Searching for:', searchTerm);
            // In real implementation, you would filter the table data based on the search term
        });

        // Page size change
        document.getElementById('pageSize').addEventListener('change', function() {
            const pageSize = this.value;
            console.log('Page size changed to:', pageSize);
            // In real implementation, you would update the items per page
        });
    </script>
